package com.hadooptest;

import org.apache.hadoop.conf.*;
import org.apache.hadoop.fs.*;
import org.apache.log4j.BasicConfigurator;
import java.net.URI;

public class Create_file {          //创建文件
    public static void main( String[] args ) throws Exception {
        BasicConfigurator.configure();
        Configuration conf = new Configuration();
        //配置NameNode的地址
        URI uri = new URI("hdfs://192.168.20.130:8020");
        //指定用户名，获取FileSystem对象
        FileSystem fs = FileSystem.get(uri,conf,"hadoop");
        Path dfs = new Path("/17034460218/test2.txt");
        FSDataOutputStream os = fs.create(dfs,true);
        os.writeBytes("Hello,hdfs!");

        //关闭流
        os.close();
        //关闭FileSystem
        fs.close();
    }
}
